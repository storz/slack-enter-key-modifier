{
  "name": "__MSG_appName__",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js"
    ]
  },
  "permissions": [
    "https://*.slack.com/messages/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/messages/*"
      ],
      "js": [
        "scripts/contentscript.js",
        "scripts/checkbox.js"
      ],
      "css": [
        "styles/checkbox.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
